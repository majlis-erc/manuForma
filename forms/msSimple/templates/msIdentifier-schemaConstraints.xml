<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:sc="http://www.ascc.net/xml/schematron"
     xmlns:ev="http://www.w3.org/2001/xml-events"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     xmlns:tei="http://www.tei-c.org/ns/1.0"
     xmlns:srophe="https://srophe.app"
     xmlns:xs="http://www.w3.org/2001/XMLSchema"
     xmlns:xf="http://www.w3.org/2002/xforms"
     xmlns:local="http://syriaca.org/ns">
   <msIdentifier ident="msIdentifier"
                 elementName="msIdentifier"
                 elementLabel="Add elements to identification"
                 minOccur="0"
                 maxOccur="50"
                 errorMessage=""
                 path="/*:msIdentifier"
                 currentLevel="1"
                 popup="1"
                 teiElement="&lt;msIdentifier/&gt;">
      <desc>This section contains all the call marks, names, as
                            well as other information to identify the manuscript.</desc>
      <availableAtts elementName="msIdentifier"/>
      <childElements>
         <child>
            <element ident="country"
                     label="*Country of location"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="settlement"
                     label="*Place"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="repository"
                     label="*Institution"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="collection"
                     label="*Collection"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="idno"
                     label="*Shelfmark"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="msName"
                     label="Name by which manuscript is generally known"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="objectName"
                     label="msIdentifier"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
            <element ident="altIdentifier"
                     label="Add alternate identifier"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </msIdentifier>
   <country ident="country"
            elementName="country"
            elementLabel="*Country of location"
            minOccur="0"
            maxOccur="50"
            errorMessage=""
            path="/*:msIdentifier/*:country"
            currentLevel="2"
            popup="2"
            teiElement="&lt;country/&gt;">
      <desc>Specify the country where the holding institution is situated.</desc>
      <availableAtts elementName="country"/>
      <controlledValues>
         <element xmlns="" ident="country">
            <valList type="closed">
               <valItem ident="Egypt"/>
               <valItem ident="France"/>
               <valItem ident="Germany"/>
               <valItem ident="Great Britain"/>
               <valItem ident="Hungary"/>
               <valItem ident="Israel"/>
               <valItem ident="Ukraine"/>
               <valItem ident="Russia"/>
               <valItem ident="USA"/>
            </valList>
         </element>
      </controlledValues>
      <childElements>
         <child/>
      </childElements>
   </country>
   <settlement ident="settlement"
               elementName="settlement"
               elementLabel="*Place"
               minOccur="0"
               maxOccur="50"
               errorMessage=""
               path="/*:msIdentifier/*:settlement"
               currentLevel="2"
               popup="2"
               teiElement="&lt;settlement/&gt;">
      <desc>Specify the city, town or settlement where the holding institution is
                            situated.</desc>
      <availableAtts elementName="settlement"/>
      <controlledValues>
         <element xmlns="" ident="settlement">
            <valList type="closed">
               <valItem ident="Budapest"/>
               <valItem ident="Cairo"/>
               <valItem ident="Cambridge"/>
               <valItem ident="Jerusalem"/>
               <valItem ident="Kyiv"/>
               <valItem ident="Leipzig"/>
               <valItem ident="London"/>
               <valItem ident="Paris"/>
               <valItem ident="Princeton"/>
               <valItem ident="New York"/>
               <valItem ident="St. Petersburg"/>
            </valList>
         </element>
      </controlledValues>
      <childElements>
         <child/>
      </childElements>
   </settlement>
   <repository ident="repository"
               elementName="repository"
               elementLabel="*Institution"
               minOccur="0"
               maxOccur="50"
               errorMessage=""
               path="/*:msIdentifier/*:repository"
               currentLevel="2"
               popup="2"
               teiElement="&lt;repository/&gt;">
      <desc>Specify the name of the institution, which holds the manuscript.</desc>
      <availableAtts elementName="repository"/>
      <controlledValues>
         <element xmlns="" ident="repository">
            <valList type="closed">
               <valItem ident="Alliance Israélite Universelle"/>
               <valItem ident="Ben Zvi Institute"/>
               <valItem ident="Bibliothèque Nationale de France"/>
               <valItem ident="British Library"/>
               <valItem ident="Cambridge University Library"/>
               <valItem ident="Institute of Oriental Manuscripts"/>
               <valItem ident="Jewish Theological Seminary"/>
               <valItem ident="Karaite Synagogue"/>
               <valItem ident="Library of the Hungarian Academy of Sciences"/>
               <valItem ident="National Library of Russia"/>
               <valItem ident="Princeton University Library"/>
               <valItem ident="Sassoon"/>
               <valItem ident="Universitätsbibliothek Leipzig"/>
               <valItem ident="Vernadsky National Library of Ukraine"/>
            </valList>
         </element>
      </controlledValues>
      <childElements>
         <child/>
      </childElements>
   </repository>
   <collection ident="collection"
               elementName="collection"
               elementLabel="*Collection"
               minOccur="0"
               maxOccur="50"
               errorMessage=""
               path="/*:msIdentifier/*:collection"
               currentLevel="2"
               popup="2"
               teiElement="&lt;collection/&gt;">
      <desc>Specify the name of the collection, in which the
                            manuscript is held.</desc>
      <availableAtts elementName="collection"/>
      <controlledValues>
         <element xmlns="" ident="collection">
            <valList type="closed">
               <valItem ident="Arab.-Yevr."/>
               <valItem ident="Firk. Arab."/>
               <valItem ident="Yevr. I"/>
               <valItem ident="Yevr. I A"/>
               <valItem ident="Yevr. I B"/>
               <valItem ident="Yevr. I Bibl."/>
               <valItem ident="Yevr. II A"/>
               <valItem ident="Yevr. II B"/>
               <valItem ident="Yevr. II C"/>
               <valItem ident="Yevr. II K"/>
               <valItem ident="Yevr. III A"/>
               <valItem ident="Yevr. III B"/>
               <valItem ident="Yevr. IV"/>
               <valItem ident="Yevr.-Arab. I"/>
               <valItem ident="Yevr.-Arab. II"/>
               <valItem ident=""/>
               <valItem ident="Add."/>
               <valItem ident="Harkavy"/>
               <valItem ident="Hébr."/>
               <valItem ident="Kaufmann"/>
               <valItem ident="Oriental"/>
               <valItem ident="T-S"/>
               <valItem ident="Vollers"/>
            </valList>
         </element>
      </controlledValues>
      <childElements>
         <child/>
      </childElements>
   </collection>
   <idno ident="idno"
         elementName="idno"
         elementLabel="*Shelfmark"
         minOccur="0"
         maxOccur="50"
         errorMessage=""
         path="/*:msIdentifier/*:idno"
         currentLevel="2"
         popup="2"
         teiElement="&lt;idno/&gt;">
      <desc>Specify the current shelfmark. Under "old shelfmark", specify a former shelfmark.
                            For catalogues and external databases, choose the respective ID-number (e.g. Cat. Margoliouth no. 1098 (III:512f.); IMHM F
                            56304).</desc>
      <availableAtts elementName="idno"/>
      <childElements>
         <textNode type="input" class="idno"/>
         <child/>
      </childElements>
   </idno>
   <msName ident="msName"
           elementName="msName"
           elementLabel="Name by which manuscript is generally known"
           minOccur="0"
           maxOccur="50"
           errorMessage=""
           path="/*:msIdentifier/*:msName"
           currentLevel="2"
           popup="2"
           teiElement="&lt;msName/&gt;">
      <desc>Name used to call the manuscript by scholars.</desc>
      <availableAtts elementName="msName"/>
      <childElements>
         <textNode type="input" class="msName"/>
         <child/>
      </childElements>
   </msName>
   <objectName ident="objectName"
               elementName="objectName"
               elementLabel="objectName"
               minOccur="0"
               maxOccur="50"
               errorMessage=""
               path="/*:msIdentifier/*:objectName"
               currentLevel="2"
               popup="2"
               teiElement="&lt;objectName/&gt;">
      <availableAtts elementName="objectName"/>
      <childElements>
         <child/>
      </childElements>
   </objectName>
   <altIdentifier ident="altIdentifier"
                  elementName="altIdentifier"
                  elementLabel="Add alternate identifier"
                  minOccur="0"
                  maxOccur="50"
                  errorMessage=""
                  path="/*:msIdentifier/*:altIdentifier"
                  currentLevel="2"
                  popup="2"
                  teiElement="&lt;altIdentifier/&gt;">
      <desc>Alternate identifiers are either old shelfmarks and identifiers in external
                            authorities such as IMHM, SfarData, Ktiv, or FGP. Choose the relevant option from the dropdown menu.</desc>
      <availableAtts elementName="altIdentifier">
         <attDef attLabel="Type of identifier" ident="type" mode="change">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
                   xmlns:sch="http://purl.oclc.org/dsdl/schematron">Type of identifier</gloss>
            <valList xmlns:rng="http://relaxng.org/ns/structure/1.0"
                     xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                     type="open"
                     mode="change">
               <valItem ident="IMHM" attLabel="IMHM"/>
               <valItem ident="SfarData" attLabel="SfarData"/>
               <valItem ident="Ktiv" attLabel="Ktiv"/>
               <valItem ident="old" attLabel="Old shelfmark"/>
               <valItem ident="FGP" attLabel="Friedberg Geniza Project"/>
               <valItem ident="main-shelfmark" attLabel="Main shelfmark (Composite manuscript)"/>
            </valList>
         </attDef>
      </availableAtts>
      <childElements>
         <child>
            <element ident="idno"
                     label="*Shelfmark"
                     minOccurs=""
                     maxOccurs=""
                     errorMessage=""/>
         </child>
      </childElements>
   </altIdentifier>
   <idno ident="idno"
         elementName="idno"
         elementLabel="*Shelfmark"
         minOccur="0"
         maxOccur="50"
         errorMessage=""
         path="/*:msIdentifier/*:altIdentifier/*:idno"
         currentLevel="3"
         popup="3"
         teiElement="&lt;idno/&gt;">
      <desc>Specify the current shelfmark. Under "old shelfmark", specify a former shelfmark.
                            For catalogues and external databases, choose the respective ID-number (e.g. Cat. Margoliouth no. 1098 (III:512f.); IMHM F
                            56304).</desc>
      <availableAtts elementName="idno"/>
      <childElements>
         <textNode type="input" class="idno"/>
         <child/>
      </childElements>
   </idno>
</TEI>
