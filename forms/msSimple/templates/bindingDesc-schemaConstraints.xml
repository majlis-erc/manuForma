            <desc versionDate="2013-04-16" xml:lang="en">identifies one or more elements to which the metamark applies.</desc>
            <datatype minOccurs="1" maxOccurs="unbounded">
               <dataRef key="teidata.pointer"/>
            </datatype>
         </attDef>
