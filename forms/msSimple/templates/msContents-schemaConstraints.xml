         <child>
            <element ident="locus" label="*Folios"/>
            <element ident="title" label="*Title"/>
            <element ident="author" label="Author"/>
            <element ident="docDate" label="Date of composition"/>
            <element ident="textLang" label="Text language"/>
            <element ident="rubric" label="Rubric"/>
            <element ident="incipit" label="Incipit"/>
            <element ident="explicit" label="Explicit"/>
            <element ident="finalRubric" label="Final rubric"/>
            <element ident="note" label="Note"/>
