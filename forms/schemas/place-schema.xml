                    <elementSpec ident="relation" mode="delete"/>
                    <elementSpec ident="residence" mode="delete"/>
                    <elementSpec ident="sex" mode="delete"/>
                    <elementSpec ident="citedRange" mode="change">
                        <classes mode="change">
