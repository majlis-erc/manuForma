               <valItem ident="medium" attLabel="Medium"/>
               <valItem ident="low" attLabel="Low"/>
            </valList>
         </attDef>
         <attDef attLabel="Person identifier" ident="ref" mode="change">
            <gloss xmlns:rng="http://relaxng.org/ns/structure/1.0"
